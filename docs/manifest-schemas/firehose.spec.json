{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Manifest",
  "description": "Firehose dataset manifest.",
  "type": "object",
  "properties": {
    "finalized_blocks_only": {
      "description": "Only include finalized block data.",
      "type": "boolean",
      "default": false
    },
    "kind": {
      "description": "Dataset kind, must be `firehose`.",
      "const": "firehose"
    },
    "network": {
      "description": "Network name, e.g., `mainnet`.",
      "type": "string"
    },
    "start_block": {
      "description": "Dataset start block.",
      "type": "integer",
      "format": "uint64",
      "default": 0,
      "minimum": 0
    },
    "tables": {
      "description": "Dataset tables. Maps table names to their definitions.",
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/Table"
      }
    }
  },
  "required": [
    "kind",
    "network",
    "tables"
  ],
  "$defs": {
    "ArrowSchema": {
      "description": "Arrow schema representation for serialization.\n\nContains an ordered list of fields that define the structure of a table.",
      "type": "object",
      "properties": {
        "fields": {
          "description": "Ordered list of fields in the schema",
          "type": "array",
          "items": {
            "$ref": "#/$defs/Field"
          }
        }
      },
      "required": [
        "fields"
      ]
    },
    "DataType": {
      "description": "Arrow data type, e.g. `Int32`, `Utf8`, etc.",
      "type": "string"
    },
    "Field": {
      "description": "Arrow field definition with name, type, and nullability.\n\nRepresents a single column in a table schema.",
      "type": "object",
      "properties": {
        "name": {
          "description": "Field name",
          "type": "string"
        },
        "nullable": {
          "description": "Whether the field can contain null values",
          "type": "boolean"
        },
        "type": {
          "description": "Arrow data type of the field",
          "$ref": "#/$defs/DataType"
        }
      },
      "required": [
        "name",
        "type",
        "nullable"
      ]
    },
    "Table": {
      "description": "Table definition for raw datasets",
      "type": "object",
      "properties": {
        "network": {
          "description": "Network for this table",
          "type": "string"
        },
        "schema": {
          "description": "Arrow schema for this table",
          "$ref": "#/$defs/TableSchema"
        }
      },
      "required": [
        "schema",
        "network"
      ]
    },
    "TableSchema": {
      "description": "Schema definition for a table.\n\nWraps an Arrow schema with field definitions including names, types, and nullability.",
      "type": "object",
      "properties": {
        "arrow": {
          "description": "Arrow schema definition",
          "$ref": "#/$defs/ArrowSchema"
        }
      },
      "required": [
        "arrow"
      ]
    }
  }
}