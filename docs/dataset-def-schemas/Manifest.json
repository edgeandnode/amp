{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Manifest",
  "type": "object",
  "properties": {
    "dependencies": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/Dependency"
      },
      "default": {}
    },
    "functions": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/Function"
      },
      "default": {}
    },
    "kind": {
      "$ref": "#/$defs/ManifestKind"
    },
    "name": {
      "description": "Dataset name.",
      "type": "string"
    },
    "network": {
      "description": "Network name, e.g., `mainnet`.",
      "type": "string"
    },
    "tables": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/Table"
      },
      "default": {}
    },
    "version": {
      "description": "Semver version of the dataset, e.g. `1.0.0`.",
      "$ref": "#/$defs/Version"
    }
  },
  "required": [
    "name",
    "network",
    "version",
    "kind"
  ],
  "$defs": {
    "ArrowSchema": {
      "type": "object",
      "properties": {
        "fields": {
          "description": "List of Fields in the schema.",
          "type": "array",
          "items": {
            "$ref": "#/$defs/Field"
          }
        }
      },
      "required": [
        "fields"
      ]
    },
    "DataType": {
      "description": "Arrow data type, e.g. `Int32`, `Utf8`, etc.",
      "type": "string"
    },
    "Dependency": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "owner": {
          "type": "string"
        },
        "version": {
          "description": "Semver version requirement for the dependency, e.g. `^1.0.0` or `>=1.0.0 <2.0.0`.",
          "$ref": "#/$defs/VersionReq"
        }
      },
      "required": [
        "owner",
        "name",
        "version"
      ]
    },
    "Field": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Field name.",
          "type": "string"
        },
        "nullable": {
          "description": "Boolean indicating whether the field is nullable.",
          "type": "boolean"
        },
        "type": {
          "description": "Data type.",
          "$ref": "#/$defs/DataType"
        }
      },
      "required": [
        "name",
        "type",
        "nullable"
      ]
    },
    "Function": {
      "type": "object",
      "properties": {
        "inputTypes": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/DataType"
          }
        },
        "outputType": {
          "$ref": "#/$defs/DataType"
        },
        "source": {
          "$ref": "#/$defs/FunctionSource"
        }
      },
      "required": [
        "inputTypes",
        "outputType",
        "source"
      ]
    },
    "FunctionSource": {
      "type": "object",
      "properties": {
        "filename": {
          "type": "string"
        },
        "source": {
          "type": "string"
        }
      },
      "required": [
        "source",
        "filename"
      ]
    },
    "ManifestKind": {
      "type": "string",
      "enum": [
        "manifest"
      ]
    },
    "Table": {
      "type": "object",
      "properties": {
        "input": {
          "description": "Table input, which can be a View.",
          "$ref": "#/$defs/TableInput"
        },
        "network": {
          "type": "string"
        },
        "schema": {
          "description": "Table schema, which is an Arrow Schema.",
          "$ref": "#/$defs/TableSchema"
        }
      },
      "required": [
        "input",
        "schema",
        "network"
      ]
    },
    "TableInput": {
      "anyOf": [
        {
          "$ref": "#/$defs/View"
        }
      ]
    },
    "TableSchema": {
      "type": "object",
      "properties": {
        "arrow": {
          "description": "Arrow schema of the table.",
          "$ref": "#/$defs/ArrowSchema"
        }
      },
      "required": [
        "arrow"
      ]
    },
    "Version": {
      "type": "string"
    },
    "VersionReq": {
      "type": "string"
    },
    "View": {
      "type": "object",
      "properties": {
        "sql": {
          "description": "SQL query defining the view.",
          "type": "string"
        }
      },
      "required": [
        "sql"
      ]
    }
  }
}